<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/github"
        android:layout_width="90dp"
        android:layout_height="87dp"
        android:layout_marginBottom="52dp"
        android:backgroundTint="@android:color/transparent"
        android:backgroundTintMode="multiply"
        android:foreground="@drawable/github_logo"
        android:foregroundGravity="fill"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.155"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btPlay"
        app:layout_constraintVertical_bias="0.94" />

    <EditText
        android:id="@+id/user"
        style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox.Dense"
        android:layout_width="179dp"
        android:layout_height="108dp"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:fontFamily="@font/vt323"
        android:hint="Usr"
        android:inputType="text"
        android:maxLength="3"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="55sp"
        app:layout_constraintBottom_toTopOf="@+id/btPlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btPlay"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="158dp"
        android:layout_height="67dp"
        android:layout_marginBottom="256dp"
        android:backgroundTintMode="add"
        android:filterTouchesWhenObscured="false"
        android:fitsSystemWindows="false"
        android:forceHasOverlappingRendering="false"
        android:foreground="@drawable/start"
        android:foregroundGravity="center|fill"
        android:foregroundTintMode="src_in"
        android:freezesText="false"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/scores"
        android:layout_width="78dp"
        android:layout_height="70dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="52dp"
        android:backgroundTint="@android:color/transparent"
        android:backgroundTintMode="multiply"
        android:foreground="@drawable/leaderboard"
        android:foregroundGravity="fill"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btPlay"
        app:layout_constraintVertical_bias="0.947" />

    <TextView
        android:id="@+id/mainmenuTitle"
        android:layout_width="232dp"
        android:layout_height="100dp"
        android:layout_marginBottom="72dp"
        android:fontFamily="@font/vt323"
        android:text="TETRIS"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="96sp"
        app:layout_constraintBottom_toTopOf="@+id/user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.695" />

</androidx.constraintlayout.widget.ConstraintLayout>
